@model SammysAuto.Models.ServiceType
@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Adicionar tipo de serviço</h2>
<hr />

<form asp-action="Create">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Nome" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Nome" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Criar" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-success">De volta à lista</a>
        </div>
    </div>
</form>

