@model IEnumerable<SammysAuto.Models.ServiceType>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Gerenciar tipos de serviço</h2>
<hr />

<div class="form-border">
    <p>
        <a class="btn btn-sm btn-primary" asp-action="Create">Crie um novo</a>
    </p>
    <br />

    <table class="table table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(m=>m.Nome)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m=>item.Nome)
                </td>
                <td>
                    @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { ServiceId = item.Id })
                </td>
            </tr>
        }
    </table>
</div>

