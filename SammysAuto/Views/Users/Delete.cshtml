@model ApplicationUser
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Editar cliente</h2>
<hr />

<form asp-action="Edit">
    <div class="form-border">
        <input type="hidden" asp-for="Id" />
        <fieldset disabled>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Nome" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Nome" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Sobrenome" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Sobrenome" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Email" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="NumeroTelefone" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="NumeroTelefone" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Endereco" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Endereco" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Cidade" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Cidade" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="CodigoPostal" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="CodigoPostal" class="form-control" />
                    </div>
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="Excluir" class="btn btn-sm btn-danger" />
            <a asp-action="Index" class="btn btn-sm btn-success">De volta à lista</a>
        </div>
    </div>
</form>

