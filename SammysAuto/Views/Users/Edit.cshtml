@model ApplicationUser
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Editar cliente</h2>
<hr />

<form asp-action="Edit">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Nome" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Nome" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Sobrenome" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Sobrenome" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Sobrenome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Email" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="NumeroTelefone" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="NumeroTelefone" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="NumeroTelefone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Endereco" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Endereco" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Endereco" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Cidade" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Cidade" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="CodigoPostal" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="CodigoPostal" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="CodigoPostal" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Atualizar" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-success">De volta à lista</a>
        </div>
    </div>
</form>

