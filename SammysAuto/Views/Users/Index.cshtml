@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<form asp-controller="Users" asp-action="Index" method="get">

    <br />
    <h2>Clientes</h2>
    <hr />

    <div style="height:60px;">
        <div class="col-sm-3" style="padding-top:20px;">
            <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-primary" style="width:200px;">
                <span class="glyphicon glyphicon-plus"></span>&nbsp; Crie novos clientes
            </a>
        </div>
        <div class="col-sm-9">
            <div class="row">
                <div class="col-sm-12 text-right">
                    <b>Procurar</b>
                    <label class="radio-inline">@Html.RadioButton("option", "name")Nome</label>
                    <label class="radio-inline">@Html.RadioButton("option", "email")E-mail</label>
                    <label class="radio-inline">@Html.RadioButton("option", "phone")Telefone</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="pull-right">
                <button type="submit" nome="submit" value="Procurar" class="btn btn-sm btn-primary">
                    <span class="glyphicon glyphicon-search"></span> Procurar
                </button>
            </div>
            <div class="pull-right">
                @Html.Editor("search", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <hr />
    <br />

    <div class="form-border">
        <table class="table table-condensed table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Sobrenome)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.NumeroTelefone)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Email)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(m => item.NumeroTelefone)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Email)
                </td>
                <td>
                    <a asp-controller="Cars" asp-action="Index" asp-route-userid="@item.Id">
                        <img src="~/images/car.png" width="40" />&nbsp; Visualizar carros
                    </a>
                </td>
                <td>
                    @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { CustomerId=item.Id})
                </td>
            </tr>
            }
        </table>
    </div>
</form>

