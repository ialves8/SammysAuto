@model SammysAuto.Models.Car
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Excluir carro</h2>
<hr />

<form asp-action="Delete">
    <div class="form-border">
        <fieldset disabled>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="NIV" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="NIV" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Fabricacao" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Fabricacao" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Modelo" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Modelo" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Estilo" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Estilo" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Ano" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Ano" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Quilometragem" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Quilometragem" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Cor" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Cor" class="form-control" />
                    </div>
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="Excluir" class="btn btn-sm btn-danger" />
            <a asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-sm btn-success">De volta à lista</a>
        </div>
    </div>
</form>


