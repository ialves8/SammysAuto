@model SammysAuto.Models.Car
@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Adicionar carro novo</h2>
<hr />

<form asp-action="Create">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="NIV" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="NIV" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="NIV" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Fabricacao" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Fabricacao" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Fabricacao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Modelo" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Modelo" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Modelo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Estilo" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Estilo" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Estilo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Ano" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Ano" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Ano" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Quilometragem" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Quilometragem" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Quilometragem" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Cor" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Cor" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Cor" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Adicionar carro" class="btn btn-sm btn-primary" />
            <a asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-sm btn-success">De volta à lista</a>
        </div>
    </div>
    <input asp-for="UserId" type="hidden" />
</form>


